<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card w-100" style="max-width: 600px;">
    <div class="card-body">
      <h1 class="card-title text-center">投稿編集</h1>

      <%= form_with model: @post, url: public_post_path(@post), method: :patch, local: true do |f| %>
        <div class="mb-3">
          <h4>Photo</h4>
          <%= f.file_field :image, accept: "image/*", class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <h4>Content</h4>
          <%= f.text_area :content, required: true, class: "form-control" %>
        </div>
        
        <div class="d-grid gap-2">
          <%= f.submit '更新', class: 'btn btn-primary' %>
          <%= link_to '戻る', public_post_path(@post), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>