<h1 class="text-center">Image Upload Form</h1>

<div class="d-flex justify-content-center">
  <div class="card" style="width: 50%;border: none; box-shadow: none;">
    <div class="card-body">
      <%= form_with model: @post, url: public_posts_path, local: true do |f| %>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <h4>Photo</h4>
          <%= f.file_field :image, accept: "image/*", required: true,style: "border: none;" %>
        </div>
        
        <div class="form-group">
          <h4>Content</h4>
          <%= f.text_area :content, required: true, class: "form-control" %>
        </div>
        
        <div class="text-center">
          <%= f.submit '投稿', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>