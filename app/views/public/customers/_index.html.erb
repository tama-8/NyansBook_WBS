<div class="container d-flex justify-content-center">
  <div class="profile-wrap w-50" style="margin:20px">
    <div class="row">
      <!--<div class="col-md-1"></div>-->
      <div class="col-md-2 text-center">
        <%= link_to public_customer_path(customer) do %>
          <% if customer.image.attached? %>
            <%= image_tag customer.image, size: "100x100", class: "rounded-circle" %>
          <% else %>
            <%= image_tag 'no_image.png', size: "100x100", class: "rounded-circle" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-9 d-flex flex-column justify-content-center"style="margin-left: 20px;">
        <div class="d-flex align-items-center">
          <%= link_to public_customer_path(customer), class: 'd-flex align-items-center' do %>
            <!-- ユーザーネーム -->
            <p class="mb-0 mr-2" style="font-weight: bold;"><%= customer.name %></p>
          <% end %>
        </div>
        <!-- 自己紹介文章 -->
        <p class="mt-3 "><%= customer.bio %></p>
        <!-- フォロー・フォロワー数とフォローボタン -->
         <p id="customer_<%= customer.id %>_follow-btn"><%= render "public/relationships/btn", customer: customer %></p>
      </div>
    </div>
  </div>
</div>