<!--customerの詳細-->
<div class="container d-flex justify-content-center">
  <div class="profile-wrap w-75" style="margin:40px">
    <div class="row">
       <div class="col-md-1"></div>
      <div class="col-md-3 text-center">
        <% if @customer.image.attached? %>
          <%= image_tag @customer.image, size: "200x200" ,class: "rounded-circle"%>
        <% else %>
          <%= image_tag 'no_image.png', size: "200x200",class: "rounded-circle" %>
        <% end %>
      </div>
        <div class="col-md-8 d-flex flex-column justify-content-center">
          <div class="d-flex align-items-center">
            <!--ユーザーネーム-->
            <p class="mb-0 mr-2"style="font-weight: bold;"><%= @customer.name %></p>
          </div>
          <!--自己紹介文章-->
           <p class="mt-3"><%= @customer.bio %></p>
      </div>
    </div>
  </div>
</div>
 <!-- customerの投稿一覧 -->
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4"> <!-- 3つずつ並べるためにcol-md-4を使用 -->
        <div class="card">
          <%= link_to public_post_path(post.id) do %>
            <%= image_tag post.get_image, class: "card-img-top", style: "width: 100%; height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <p class="card-text">
              <!--投稿ユーザー画像：-->
              <% if @customer.image.attached? %>
                <%= image_tag @customer.image, size: "50x50", class: "rounded-circle" %>
              <% else %>
                <%= image_tag 'no_image.png', size: "50x50", class: "rounded-circle" %>
              <% end %>
              <!--ユーザーネーム-->
            </p>
            <p class="card-text"style="font-weight: bold;"><%= @customer.name %></p>
          </div>
          <!--画像の説明-->
            <p class="card-text"><%= post.content %></p>
            
        </div>
      </div>
    <% end %>
  </div>
</div>