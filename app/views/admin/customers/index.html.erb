<h1>会員一覧</h1>
<!-- 検索フォームを追加 -->
<%= render 'search_form' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>登録日</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.created_at.strftime('%Y-%m-%d') %></td>
        <td>
          <%= link_to '詳細', admin_customer_path(customer), class: 'btn btn-primary btn-sm' %>
          <%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>