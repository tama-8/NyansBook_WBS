<div class="d-flex justify-content-center">
  <div class="w-50">
    <h1 class="text-center mt-4">投稿編集</h1>

    <%= form_with(model: [:admin, @post], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :content, "内容" %>
        <%= form.text_area :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :image, "画像" %>
        <%= form.file_field :image %>
      </div>

      <% if @post.image.attached? %>
        <div class="form-group">
          <%= image_tag @post.image,  style: "width: 50%; height: auto; object-fit: cover;" %>
          <p><%= form.check_box :remove_image %> 画像を削除</p>
        </div>
      <% end %>

      <div class="d-flex justify-content-between mt-4">
         <div class="d-flex justify-content-between w-10">
          <%= form.submit "更新", class: 'btn btn-primary' %>
          <%= link_to '戻る', admin_post_path(@post), class: 'btn btn-secondary ml-3' %>
        </div>
      </div>
    <% end %>
  </div>
</div>