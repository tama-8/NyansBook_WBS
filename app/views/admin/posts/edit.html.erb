<h1>投稿編集</h1>

<%= form_with(model: [:admin, @post], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, "内容" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, "画像" %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <% if @post.image.attached? %>
    <div class="form-group">
      <%= image_tag @post.image, style: "width: 50%; height: 350px; object-fit: cover;" %>
      <p><%= form.check_box :remove_image %> 画像を削除</p>
    </div>
  <% end %>

  <%= form.submit "更新", class: 'btn btn-primary' %>
<% end %>

<%= link_to '戻る', admin_post_path(@post), class: 'btn btn-secondary mt-3' %>