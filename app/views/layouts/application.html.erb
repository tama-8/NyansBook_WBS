<!DOCTYPE html>
<html>
  <head>
    <title>NyansBookWbs</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/75e15c40a4.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column  <%= 'top-page-background' if current_page?(controller: 'public/homes', action: 'top') %>">
    <%= render 'layouts/header' %>
    <main class="mb-auto">

      <!-- フラッシュメッセージの表示 -->
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>

      <% if alert %>
        <div class="alert"><%= alert %></div>
      <% end %>
      

      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>