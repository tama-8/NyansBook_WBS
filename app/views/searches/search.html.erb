<h1>Search Results</h1>

<%= form_with url: search_path, method: :get, local: true do %>
  <%= label_tag :model, "Model" %>
  <%= select_tag :model, options_for_select([['Customer', 'customer'], ['Post', 'post']]) %>

  <%= label_tag :content, "Content" %>
  <%= text_field_tag :content, params[:content] %>

  <%= label_tag :method, "Method" %>
  <%= select_tag :method, options_for_select([['Partial Match', 'partial'], ['Exact Match', 'perfect']]) %>

  <%= submit_tag "Search" %>
<% end %>

<% if @records.present? %>
  <ul>
    <% @records.each do |record| %>
      <li><%= record.respond_to?(:name) ? record.name : record.content %></li>
    <% end %>
  </ul>
<% else %>
  <p>No results found</p>
<% end %>
