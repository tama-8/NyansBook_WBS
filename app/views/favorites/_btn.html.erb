<% if post.favorited_by?(current_customer) %>
  <%= link_to public_post_favorite_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.week_favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to public_post_favorite_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.week_favorites.count %> いいね
  <% end %>
<% end %>